<Window x:Class="Chapter03.LessonStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter03"
        mc:Ignorable="d"
        Title="LessonStackPanel" Height="450" Width="800">
    <Grid>
        <!--Margin 外边距 一个值表示四边相同数据； 
        2个值，第一个是上下，第二个值是左右； 
        4个值，是从左开始顺时针-->
        <StackPanel Orientation="Vertical">
            <Button Content="点我有惊吓！" Margin="10" Width="100" Height="50"></Button>
            <TextBlock HorizontalAlignment="Center" Margin="10" Width="100" Height="50">点我有惊喜！</TextBlock>
            <Button Content="点我有惊吓！" Margin="10" Width="100" Height="50"></Button>
            <Grid></Grid>
        </StackPanel>
        
    </Grid>
</Window>
